{{#each restaurants as |restaurant|}}

 <div class="display col-sm-12" data-id="{{restaurant._id}}">
   <div class="row">
     <div class="col-sm-11 top-spacer"></div>
     <div class="col align-self-end"><a href="#" data-id="{{restaurant._id}}"></a></div>
     <div class="col-sm-10 offset-sm-1 search-img">
       <img src={{restaurant.image_url}} height="174" width="261">
     </div>
   </div>
   <div class="row">
     <div class="col-sm-1"></div>
   <div class="col-sm-11">
     <p class="handlebars-display"><span class="glyphicon glyphicon-cutlery"></span>  {{restaurant.name}}</p>
     <input class="handlebars-form-hider" name="restaurant[name]" type="text" placeholder="{{restaurant.name}}">
   </div>
 </div>
   <hr>
   <div class="row">
     <div class="col-sm-1"></div>
   <div class="col-sm-11">
     <p class="handlebars-display"><span class="glyphicon glyphicon-map-marker"></span>  {{restaurant.location.address1}} <br> {{restaurant.location.city}}, {{restaurant.location.zip_code}}</p>
     <input class="handlebars-form-hider" name="restaurant[location]" type="text" placeholder="{{restaurant.location}}">
   </div>
   <form class="handlebars-add-form">
     <input type="hidden" name="restaurant[name]" value="{{restaurant.name}}">
     <input type="hidden" name="restaurant[location]" value="{{restaurant.location.address1}}, {{restaurant.location.city}}, {{restaurant.location.zip_code}}">
     <input type="hidden" name="restaurant[imgUrl]" value="{{restaurant.image_url}}">
   <button type="submit" class="handlebars-form-submit">Add to list</button>
 </form>
   <button class="handlebars-submit-button handlebars-form-hider" type="submit" data-id="{{restaurant._id}}">Submit Update</button>
</div>
</div>
{{/each}}
