{{#each restaurants as |restaurant|}}
 <div class="display col-sm-12" data-id="{{restaurant.id}}">
   <div class="row">
     <div class="col-sm-1 glyphicon glyphicon-cutlery">
   </div>
   <div class="col-sm-11">{{restaurant.name}}
   </div>
 </div>
   <hr>
   <div class="row">
