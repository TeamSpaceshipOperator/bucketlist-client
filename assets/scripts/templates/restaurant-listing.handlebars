{{#each restaurants as |restaurant|}}

 <div class="display col-sm-12" data-id="{{restaurant._id}}">

     <div class="row">
       <div class="col-sm-11"></div>
       <div class="col align-self-end"><a href="#" class="delete-button" data-id="{{restaurant._id}}"><span class="glyphicon glyphicon-remove"></span></a></div>
       <div class="col-sm-10 offset-sm-1 search-img">
         <img src={{restaurant.imgUrl}} height="180" width="270">
       </div>
     </div>
     <div class="row">
     <div class="col-sm-12">
       <p><span class="glyphicon glyphicon-cutlery"></span>  {{restaurant.name}}</p>
     </div>
   </div>
     <hr>
     <div class="row">
       <div class="col-sm-1 glyphicon glyphicon-map-marker">
     </div>
     <div class="col-sm-11">
       <p>{{restaurant.location}}</p>
     </div>
   </div>
   <hr>
   <form class="add-note-form" data-id="{{restaurant._id}}">

       <p class="handlebars-display"><span class="glyphicon glyphicon-pencil"></span>{{restaurant.notes}}</p>
       <input class="handlebars-form-hider" name="restaurant[notes]" type="text" placeholder="{{restaurant.notes}}">
     <button class="handlebars-update-button handlebars-display" data-id="{{restaurant._id}}">Add Note</button>
     <button class="handlebars-submit-button handlebars-form-hider" type="submit" data-id="{{restaurant._id}}">Submit Note</button>
   </div>
 </form>



   </div>
</div>
{{/each}}
